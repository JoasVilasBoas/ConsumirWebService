@model IEnumerable<Endereco>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Consultar CEP</title>
</head>
<body>
    <div class="container">
        <h1>Cadastro de CEP</h1>

        <form method="get" asp-action="Cadastrar" asp-controller="Endereco" class="form-inline">
            <div class="form-group mx-sm-3 mb-2">
                <input type="text" id="txtCEP" class="form-control"  placeholder="Digite o CEP" name="txtCEP" />
            </div>
            <button type="submit" value="Consultar" class="btn btn-success mb-2"><i class="fa fa-search" aria-hidden="true"></i> Consultar</button>
        </form>
    </div>

    <div class="container" style="margin-top:30px">
        <div class="container">
            <input type="hidden" name="acao" value="CREATE" />
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            CEP
                        </th>
                        <th>
                            Logradouro
                        </th>
                        <th>
                            Complemento
                        </th>
                        <th>
                            Bairro
                        </th>
                        <th>
                            Localidade
                        </th>
                        <th>
                            UF
                        </th>
                        <th>
                            Alterar
                        </th>
                        <th>
                            Excluir
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CepId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cep)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Logradouro)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Complemento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Bairro)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Localidade)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Uf)
                            </td>
                            <td>
                                <a href="@Url.Action("Alterar", "Endereco", new { id = item.CepId})" class="btn btn-primary">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("Deletar", "Endereco", new { id = item.CepId})" class="btn btn btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @{Html.EndForm();}
        </div>
        </div>
</body>
</html>
