@model Endereco

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Exclur CEP</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body class="container" style="padding-top:30px">

    <form asp-action="Deletar" asp-controller="Endereco" class="col-6">
        <fieldset>
            <legend>Excluir CEP</legend>
            <div class="form-group">
                <label asp-for="CepId">ID:</label>
                <input type="text" asp-for="CepId" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Cep">Cep:</label>
                <input type="text" asp-for="Cep" readonly class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Logradouro">Logradouro:</label>
                <input type="text" asp-for="Logradouro" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Complemento">Complemento:</label>
                <input type="text" asp-for="Complemento"  readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Bairro">Bairro:</label>
                <input type="text" asp-for="Bairro" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Localidade">Localidade:</label>
                <input type="text" asp-for="Localidade" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Uf">Uf:</label>
                <input type="text" asp-for="Uf" readonly class="form-control" />
            </div>
            <input type="submit" value="Deletar" class="btn btn-success" />

            <a href="@Url.Action("Index", "Endereco")" class="btn btn-success">
                <i class="fa fa-arrow-left"></i> Voltar
            </a>
        </fieldset>
    </form>

</body>
</html>
